@model List<MyGuideViewModel>
@{
    ViewData["Title"] = "Rehberimiz";
    Layout = "_LayoutHomePage";
}

<div class="container-fluid mt-5 pt-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title mt-2">
                    <h4 class="m-0 text-uppercase font-weight-bold">Rehberimiz</h4>
                </div>
                <table id="myTable" class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Unvan</th>
                            <th>Şube</th>
                            <th>DahiliNo</th>
                            <th>CepNo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="color:black">
                                <td>@Html.DisplayFor(modelItem => item.AdSoyad)</td>
                                <td>@Html.DisplayFor(modelItem => item.Unvan)</td>
                                <td>@Html.DisplayFor(modelItem => item.Sube)</td>
                                <td>@Html.DisplayFor(modelItem => item.DahiliNo)</td>
                                <td>@Html.DisplayFor(modelItem => item.CepNo)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/vendor/jquery/jquery.js"></script>
    <link href="~/datatable/datatables.min.css" rel="stylesheet" />
    <link href="~/datatable/datatables.css" rel="stylesheet" />
    <script src="~/datatable/datatables.js"></script>
    <script src="~/datatable/datatables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#myTable').DataTable({
                language: {
                    url: '/datatable/tr.json'
                }
            });
        });
    </script>
}