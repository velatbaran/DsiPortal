@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "Giriş";
    Layout = "_LayoutLogin";
}
<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image">
                        <img src="~/admin/img/dsi24login.jpg" width="600px" height="500px" />
                    </div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h2 class="h4 text-gray-900 mb-4">DSİ 24.Bölge Müdürlüğü Portal</h2>
                                <h1 class="h4 text-gray-900 mb-4">Yeni Şifre Alma Sayfası</h1>
                                <label style="color:red">Lütfen sistemde kayıtlı olan bir kullanıcı adı giriniz!</label>
                            </div>
                            <form class="user" asp-action="ForgetPassword">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Username" class="control-label"></label>
                                    <input asp-for="Username" class="form-control" placeholder="kullanıcı adı giriniz..." />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="şifre giriniz..." />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="RePassword" class="control-label"></label>
                                    <input type="password" asp-for="RePassword" class="form-control" placeholder="tekrar şifre giriniz..." />
                                    <span asp-validation-for="RePassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <button type="submit" value="Şifre Değiştir" class="btn btn-warning" title="Şifre Değiştir"><i class="fa-solid fa-key"></i> Şifre Değiştir</button>
                                        </div>
                                        <div class="col-md-6">
                                            <a class="btn btn-primary" href="/Account/Login"><i class="fa-solid fa-right-to-bracket"></i> Giriş Sayfasına Dön!</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
