@model IEnumerable<GuestFeeChart>

@{
    ViewData["Title"] = "Misafirhane Yemek Çizelgesi";
}

<p>
    <a asp-action="Create" class="btn btn-outline-primary" title="Yeni Misafirhane Yemek Çizelgesi Ekle"><i class="fa-solid fa-plus"></i> Yeni Misafirhane Yemek Çizelgesi Ekle</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Dosya Adı</th>
            <th>Tür</th>
            <th>Kaydeden</th>
            <th>Kayıt Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @if (item.FileType == ".docx")
                    {
                        <i class="fa-regular fa-file-word"></i>
                    }
                    else @if (item.FileType == ".doc")
                    {
                        <i class="fa-regular fa-file-word"></i>
                    }
                    else @if (item.FileType == ".pdf")
                    {
                        <i class="fa-regular fa-file-pdf"></i>
                    }
                    else @if (item.FileType == ".xlsx")
                    {
                        <i class="fa-regular fa-file-excel"></i>
                    }
                    else @if (item.FileType == ".xls")
                    {
                        <i class="fa-regular fa-file-excel"></i>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Created)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                <td>
                    <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="İndir"><i class="fa-solid fa-download"></i> İndir</a>
                    @if (item.FileType == ".pdf")
                    {
                        <a href="@Url.Action("ViewPdf", "GuestFeeChart", new { id = item.Id })" target="_blank" class="btn btn-info btn-sm">
                            <i class="fa-solid fa-eye"></i> Görüntüle
                        </a>
                    }
                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal"
                            data-file-id="@item.Id" data-file-name="@item.Name" title="Sil">
                        <i class="fa-solid fa-trash"></i> Sil
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="Delete">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <strong id="fileName"></strong> silmek istediğine emin misin?
                    <input type="hidden" name="id" id="fileId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" title="İptal"><i class="fa-solid fa-xmark"></i> İptal</button>
                    <button type="submit" class="btn btn-danger" title="Sil"><i class="fa-solid fa-trash"></i> Sil</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const fileId = button.getAttribute('data-file-id');
        const fileName = button.getAttribute('data-file-name');

        document.getElementById('fileId').value = fileId;
        document.getElementById('fileName').textContent = fileName;
    });
</script>

